{
  "manifest_version": 3,
  "name": "ChromCognito",
  "version": "1.0.0",
  "description": "Open, route, and manage tabs in Incognito with rules, shortcuts, and auto-cleanups.",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Open this tab in Incognito",
    "default_icon": {
      "16": "icons/chromcognito.png",
      "48": "icons/chromcognito.png",
      "128": "icons/chromcognito.png"
    }
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "history",
    "contextMenus",
    "alarms"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["chunks/modClick.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/chromcognito.png",
    "48": "icons/chromcognito.png",
    "128": "icons/chromcognito.png"
  },
  "host_permissions": ["<all_urls>"],
  "commands": {
    "open-current-in-incognito": {
      "suggested_key": { "default": "Alt+Shift+I" },
      "description": "Open current tab in Incognito"
    },
    "open-matching-tabs-in-incognito": {
      "suggested_key": { "default": "Alt+Shift+M" },
      "description": "Open all matching-rule tabs in Incognito"
    },
    "open-all-tabs-in-incognito": {
      "suggested_key": { "default": "Alt+Shift+A" },
      "description": "Open all tabs in window in Incognito"
    }
  },
  "incognito": "split"
}
